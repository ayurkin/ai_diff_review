{
  "name": "ai-review-helper",
  "displayName": "AI Review Helper",
  "description": "Helps prepare context for LLM code reviews",
  "version": "0.0.3",
  "publisher": "myname",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-review-container",
          "title": "AI Review",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "ai-review-container": [
        {
          "id": "aiReview.view",
          "name": "Review Helper"
        }
      ]
    },
    "commands": [
      {
        "command": "aiReview.selectBranches",
        "title": "Select Branches",
        "icon": "$(git-branch)"
      },
      {
        "command": "aiReview.copyPrompt",
        "title": "Copy Prompt",
        "icon": "$(copy)"
      },
      {
        "command": "aiReview.setInstruction",
        "title": "Set Review Instruction",
        "icon": "$(edit)"
      },
      {
        "command": "aiReview.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "aiReview.openDiff",
        "title": "Open Diff"
      },
      {
        "command": "aiReview.focus",
        "title": "AI Review: Focus Sidebar"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiReview.selectBranches",
          "when": "view == aiReview.view",
          "group": "navigation@1"
        },
        {
          "command": "aiReview.setInstruction",
          "when": "view == aiReview.view",
          "group": "navigation@2"
        },
        {
          "command": "aiReview.copyPrompt",
          "when": "view == aiReview.view",
          "group": "navigation@3"
        },
        {
          "command": "aiReview.refresh",
          "when": "view == aiReview.view",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.1.3"
  }
}
